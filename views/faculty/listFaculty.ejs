<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>College Management System - List of Faculty Members</title>
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container">
        <h1 class="mt-5">List of Faculty Members</h1>
        <a class="btn btn-primary mt-3" href="/faculty/add">Add New Faculty</a>
        <table class="table table-bordered table-striped mt-3">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Email</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% faculty.forEach(function(faculty) { %>
                    <tr>
                        <td><%= faculty.faculty_id %></td>
                        <td><%= faculty.first_name %></td>
                        <td><%= faculty.last_name %></td>
                        <td><%= faculty.email %></td>
                        <td>
                            <a class="btn btn-info" href="/faculty/edit/<%= faculty.faculty_id %>">Edit</a>
                            <a class="btn btn-danger" href="/faculty/delete/<%= faculty.faculty_id %>">Delete</a>
                        </td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
    </div>
</body>
</html>

