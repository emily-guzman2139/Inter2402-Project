<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>College Management System - Enroll Student</title>
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container">
        <h1 class="mt-5">Enroll Student</h1>
        <form method="post" action="/enrollments/enrollStudent">
            <div class="form-group mt-3">
                <label for="student">Select Student</label>
                <select class="form-control" id="student" name="student_id" required>
                    <% students.forEach(function(student) { %>
                        <option value="<%= student.student_id %>"><%= student.first_name %> <%= student.last_name %></option>
                        <% }); %>
                </select>
            </div>
            <div class="form-group mt-3">
                <label for="course">Select Course</label>
                <select class="form-control" id="course" name="course_id" required>
                    <% courses.forEach(function(course) { %>
                        <option value="<%= course.course_id %>"><%= course.course_name %></option>
                        <% }); %>
                </select>
            </div>
          <div class="form-group mt-3">
                <label for="faculty">Select Faculty</label>
                <select class="form-control" id="faculty" name="faculty_id" required>
                    <% faculty.forEach(function(faculty) { %>
                        <option value="<%= faculty.faculty_id %>"><%= faculty.faculty_name %></option>
                        <% }); %>
                </select> 
            <button type="submit" class="btn btn-primary mt-3">Enroll Student</button>
        </form>
</body>
</html>